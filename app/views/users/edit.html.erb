<h1>Editing user</h1>
<% if @self_profile %>
  <% form_for(@user) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :login %><br />
      <%= f.text_field :login %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
<%end%>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>